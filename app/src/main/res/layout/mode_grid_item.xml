<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_margin="10dp"
    android:id="@+id/mode_grid_image_layout"
    android:background="@drawable/alarm_list_item"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mode_image_view"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:alpha="0.3"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        >

        <TextView android:id="@+id/modeNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="5dp"
            android:text="Name" />


        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mode_icon_background"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp">

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_wifi"
                        android:layout_gravity="center"
                        android:id="@+id/mode_wifi_image" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_volume_up"
                        android:id="@+id/mode_ringtone_image"
                        android:layout_gravity="center"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_call"
                        android:layout_gravity="center"
                        android:id="@+id/mode_call_image" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:layout_gravity="center"
                        android:id="@+id/mode_message_image" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="0dp"
                >

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_media_volume_medium"
                        android:layout_gravity="center"
                        android:id="@+id/mode_media_image" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_brightness_high"
                        android:layout_gravity="center"
                        android:id="@+id/mode_br_image" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bluetooth_yes"
                        android:layout_gravity="center"
                        android:id="@+id/mode_bluetooth_image" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mode_button_background"
                    android:layout_margin="2dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock_closed"
                        android:layout_gravity="center"
                        android:id="@+id/mode_lock_image" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/mode_edit_wrapper">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
            <FrameLayout android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_buttons_background">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/editModeButton"
                    android:background="@drawable/ic_edit"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <FrameLayout android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_buttons_background">
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/deleteModeButton"
                    android:background="@drawable/ic_delete"
                    android:layout_gravity="center"/>
            </FrameLayout>>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>